{
  "name": "microfrontends-composition",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:appshell": "cd app-shell && ng serve --port 5000",
    "start:dashboard": "cd dashboard && ng serve --port 5001",
    "start:product-catalog": "cd product-catalog && ng serve --port 5002",
